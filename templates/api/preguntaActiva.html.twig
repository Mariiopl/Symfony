{% extends 'base.html.twig' %}

{% block title %}Pregunta Activa{% endblock %}

{% block body %}
<style>
/* Reutilizamos el mismo estilo que proporcionaste */
body {
    font-family: 'Arial', sans-serif;
    background-color: #f9f9f9;
    margin: 0;
    padding: 20px;
    color: #333;
}

h1 {
    text-align: center;
    color: #555;
    margin-bottom: 20px;
    font-size: 2.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.table {
    width: 100%;
    margin-bottom: 20px;
    background-color: #fff;
    border: 2px solid #ddd;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.table th {
    background-color: #007bff;
    color: #fff;
    text-align: left;
    padding: 15px;
    font-size: 18px;
    border-bottom: 2px solid #ddd;
}

.table td {
    padding: 15px;
    color: #555;
}

form {
    text-align: center;
    margin-top: 30px;
}

.radio-group {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
    max-width: 600px;
    margin: 0 auto;
}

.radio-group label {
    background-color: #f9f9f9;
    color: #333;
    font-size: 1.2rem;
    padding: 15px 20px;
    border: 2px solid #ddd;
    border-radius: 10px;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
}

.radio-group label:hover {
    background-color: #f0f0f0;
}

.radio-group input {
    display: none;
}

.radio-group input:checked + label {
    background-color: #007bff;
    color: #fff;
    border-color: #007bff;
    box-shadow: 0 4px 8px rgba(0, 123, 255, 0.6);
}

form button {
    margin-top: 20px;
    padding: 15px 30px;
    background-color: #28a745;
    color: #fff;
    font-size: 1.5rem;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
}

form button:hover {
    background-color: #218838;
    transform: scale(1.05);
}

form button:active {
    background-color: #1e7e34;
    transform: scale(0.95);
}

a {
    display: inline-block;
    margin-top: 20px;
    color: #007bff;
    font-size: 1.2rem;
    text-decoration: none;
    transition: color 0.3s ease;
}

a:hover {
    color: #0056b3;
}
</style>

<h1>Pregunta Activa</h1>

{% if preguntaActiva %}
    <table class="table">
        <tbody>
            <tr>
                <th>Enunciado</th>
                <td>{{ preguntaActiva.enunciado }}</td>
            </tr>
        </tbody>
    </table>

    <form action="{{ path('app_pregunta_submit', { id: preguntaActiva.id }) }}" method="post">
        <div class="radio-group">
            <input type="radio" id="opcionA" name="respuesta" value="a">
            <label for="opcionA">a) {{ preguntaActiva.opcionA }}</label>
            
            <input type="radio" id="opcionB" name="respuesta" value="b">
            <label for="opcionB">b) {{ preguntaActiva.opcionB }}</label>
            
            {% if preguntaActiva.opcionC %}
                <input type="radio" id="opcionC" name="respuesta" value="c">
                <label for="opcionC">c) {{ preguntaActiva.opcionC }}</label>
            {% endif %}
            
            {% if preguntaActiva.opcionD %}
                <input type="radio" id="opcionD" name="respuesta" value="d">
                <label for="opcionD">d) {{ preguntaActiva.opcionD }}</label>
            {% endif %}
        </div>
        <button type="submit">Enviar</button>
    </form>
{% else %}
    <p>No hay una pregunta activa en este momento. Por favor, vuelve m√°s tarde.</p>
{% endif %}

    {% if is_granted('ROLE_ADMIN') %} 
    <a href="{{ path('app_pregunta_index') }}">Volver a la lista</a>
    {% endif %}
    
{% endblock %}
