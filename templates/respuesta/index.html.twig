{% extends 'base.html.twig' %}

{% block title %}Respuesta index{% endblock %}

{% block body %}
    <h1>Respuesta index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marca_temporal</th>
                <th>Respuesta_elegida</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for respuestum in respuestas %}
            <tr>
                <td>{{ respuestum.id }}</td>
                <td>{{ respuestum.marcaTemporal ? respuestum.marcaTemporal|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ respuestum.respuestaElegida }}</td>
                <td>
                    <a href="{{ path('app_respuesta_show', {'id': respuestum.id}) }}">show</a>
                    <a href="{{ path('app_respuesta_edit', {'id': respuestum.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_respuesta_new') }}">Create new</a>
{% endblock %}
